<main>
    <h1>IronHack Cinema</h1>
    <p>Clic on the movie to check the showtimes</p>
    <div class="movies">
        {{#each movies as |movie|}}
        <div class="movie">
            <img src="{{ movie.image }}" width="300">
            <div class="movie-data">
                <p>{{ movie.title }}</p>
                <a href="/movie/{{ movie._id }}">See more</a>
            </div>
        </div>
        {{/each }}
    </div>
</main>